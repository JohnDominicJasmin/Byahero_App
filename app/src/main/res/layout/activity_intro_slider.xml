<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroSliders">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerSliders"
        android:layout_width="0dp"
        android:layout_height="557dp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/skipButtonSliders"
        android:layout_width="94dp"
        android:layout_height="38dp"
        android:background="@color/transparent"
        android:onClick="skipButtonSlidersIsClicked"
        android:paddingStart="25dp"
        android:text="SKIP"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backButtonSliders"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:background="@color/transparent"
        android:onClick="backButtonSlidersIsClicked"
        android:text="Back"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextButtonSliders"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:background="@color/transparent"
        android:onClick="nextButtonSlidersIsClicked"
        android:text="Next"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_dotsIndicator"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"></LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>