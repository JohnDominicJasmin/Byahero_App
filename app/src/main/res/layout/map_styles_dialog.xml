<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="420dp"
    android:layout_gravity="end|center"
    android:elevation="40dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/White"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:background="@drawable/line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />


            <ImageButton
                android:id="@+id/defaultMapStyleButton"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="25dp"
                android:adjustViewBounds="true"
                android:background="@color/White"
                android:clickable="true"
                android:focusable="true"
                android:importantForAccessibility="no"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/traffic_day_map_style"
                app:layout_constraintEnd_toStartOf="@+id/darkMapStyleButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/maps3dDetailsButton"
                android:layout_width="65dp"

                android:layout_height="67dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="48dp"
                android:background="@color/White"
                android:clickable="true"
                android:focusable="true"
                android:importantForAccessibility="no"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/maps_3d"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/trafficMapDetailsButton"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/darkMapStyleButton"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginTop="52dp"
                android:adjustViewBounds="true"
                android:background="@color/White"
                android:clickable="true"

                android:focusable="true"
                android:importantForAccessibility="no"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/dark_map_style"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/streetMapStyleButton"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="29dp"
                android:adjustViewBounds="true"
                android:background="@color/White"
                android:clickable="true"
                android:focusable="true"
                android:importantForAccessibility="no"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/streets_map_style"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/satelliteStreetsMapStyleButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/trafficMapStyleTextView" />

            <ImageButton
                android:id="@+id/trafficMapDetailsButton"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginTop="48dp"
                android:adjustViewBounds="true"
                android:background="@color/White"
                android:clickable="true"
                android:focusable="true"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                app:layout_constraintVertical_bias="0.023"
                app:srcCompat="@drawable/live_traffic" />

            <ImageButton
                android:id="@+id/satelliteStreetsMapStyleButton"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:adjustViewBounds="true"
                android:background="@color/White"
                android:importantForAccessibility="no"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/satellite_streets_map_style"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.572"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/darkMapStyleTextView" />

            <ImageButton
                android:id="@+id/neonMapStyleButton"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:adjustViewBounds="true"
                android:background="@color/White"
                android:importantForAccessibility="no"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/neon_map_style"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/satelliteStreetsMapStyleButton"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <ImageButton
                android:id="@+id/satelliteMapStyleButton"
                android:layout_width="65dp"
                android:layout_height="67dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="25dp"
                android:adjustViewBounds="true"
                android:background="@color/White"
                android:importantForAccessibility="no"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/satellite_map_style"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/darkMapStyleButton"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/satelliteStyle"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/satelliteMapStyleButton"
                app:layout_constraintStart_toStartOf="@+id/satelliteMapStyleButton"
                app:layout_constraintTop_toBottomOf="@+id/satelliteMapStyleButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/trafficMapStyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/defaultStyle"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/defaultMapStyleButton"
                app:layout_constraintStart_toStartOf="@+id/defaultMapStyleButton"
                app:layout_constraintTop_toBottomOf="@+id/defaultMapStyleButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/darkMapStyleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/darkMapStyle"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/darkMapStyleButton"
                app:layout_constraintStart_toStartOf="@+id/darkMapStyleButton"
                app:layout_constraintTop_toBottomOf="@+id/darkMapStyleButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/streetsStyle"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/streetMapStyleButton"
                app:layout_constraintStart_toStartOf="@+id/streetMapStyleButton"
                app:layout_constraintTop_toBottomOf="@+id/streetMapStyleButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/satelliteStreetsStyle"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/satelliteStreetsMapStyleButton"
                app:layout_constraintStart_toStartOf="@+id/satelliteStreetsMapStyleButton"
                app:layout_constraintTop_toBottomOf="@+id/satelliteStreetsMapStyleButton" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/neonStyle"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="11sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="@+id/neonMapStyleButton"
                app:layout_constraintStart_toStartOf="@+id/neonMapStyleButton"
                app:layout_constraintTop_toBottomOf="@+id/neonMapStyleButton" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/mapTypeTitle"
                android:textAlignment="center"
                android:textColor="@color/Black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="3D"
                android:textColor="@color/Black"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/maps3dDetailsButton"
                app:layout_constraintStart_toStartOf="@+id/maps3dDetailsButton"
                app:layout_constraintTop_toBottomOf="@+id/maps3dDetailsButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Traffic"
                android:textColor="@color/Black"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@+id/trafficMapDetailsButton"
                app:layout_constraintStart_toStartOf="@+id/trafficMapDetailsButton"
                app:layout_constraintTop_toBottomOf="@+id/trafficMapDetailsButton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Map details"
                android:textColor="@color/Black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>